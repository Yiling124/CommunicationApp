<Window x:Class="ChattingClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChattingClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1062" Closing="Window_Closing">
    <Grid Margin="0,0,-411,-184.5">
        <Button Name="CreateSessionButton" IsDefault="True" Content="Create Session" HorizontalAlignment="Left" Margin="814,53,0,0" VerticalAlignment="Top" Width="115" Height="54" Click="CreateSessionButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="47" Margin="533,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="265" Name ="userNameTextBox"  RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.353"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.476"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Name="SendButton" IsDefault="True" Content="Send" HorizontalAlignment="Left" Margin="647,354,0,0" VerticalAlignment="Top" Width="119" Height="42" Click="SendMessageButton_Click"/>
        <TextBox Name ="MessageTextBox" HorizontalAlignment="Left" Height="58" Margin="34,354,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="583"/>
        <TextBox Name="TextDisplayTextBox" HorizontalAlignment="Left" Height="120" Margin="34,39,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="465" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.122"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.498"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Name="WelcomeLabel" Content="welcome" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top" Width="179"/>
        <TextBox Name="TextDisplayTextBox_OnlinePeers" HorizontalAlignment="Left" Height="177" Margin="813,162,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="228" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.122"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.498"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label x:Name="Connected_Client_Label" Content="Connected Users In Session:" HorizontalAlignment="Left" Margin="842,131,0,0" VerticalAlignment="Top" Width="167" RenderTransformOrigin="0.5,0.5"/>
        <TextBox HorizontalAlignment="Left" Height="47" Margin="556,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203" Name ="sessionOwnerIpTextBox"  RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.353"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.476"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label x:Name="SessionOwnerIPLabel" Content="Session Owner IP" HorizontalAlignment="Left" Margin="561,126,0,0" VerticalAlignment="Top" Width="179"/>
        <Label x:Name="WelcomeLabel_Copy1" Content="Your Name:" HorizontalAlignment="Left" Margin="539,18,0,0" VerticalAlignment="Top" Width="179"/>
        <Label x:Name="SessionOnwerPortLabel" Content="Session Owner Port" HorizontalAlignment="Left" Margin="561,204,0,0" VerticalAlignment="Top" Width="179"/>
        <TextBox HorizontalAlignment="Left" Height="47" Margin="556,228,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203" Name ="sessionOwnerPortTextBox"  RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.353"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.476"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Name="JoinSessionButton" IsDefault="True" Content="Join Session&#xD;&#xA;" HorizontalAlignment="Left" Margin="573,282,0,0" VerticalAlignment="Top" Width="179" Height="54" Click="JoinSessionButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="47" Margin="138,211,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203" Name ="receiverIpTextBox"  RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.353"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.476"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Name="ReceiverIpLabel" Content="Receiver IP" HorizontalAlignment="Left" Margin="143,183,0,0" VerticalAlignment="Top" Width="179"/>
        <Label Name="ReceiverPortLabel" Content="Receiver Port" HorizontalAlignment="Left" Margin="143,261,0,0" VerticalAlignment="Top" Width="179"/>
        <TextBox HorizontalAlignment="Left" Height="47" Margin="138,285,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203" Name ="receiverPortTextBox"  RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.353"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.476"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

    </Grid>
</Window>