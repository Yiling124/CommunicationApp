<Window x:Class="ChattingClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChattingClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-411,-184.5">
        <Button Name="LoginButton" IsDefault="True" Content="Login" HorizontalAlignment="Left" Margin="587,66,0,0" VerticalAlignment="Top" Width="115" Height="54" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Height="47" Margin="40,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="508" Name ="userNameTextBox"  RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.353"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.476"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Name="SendButton" IsDefault="True" Content="Send" HorizontalAlignment="Left" Margin="647,354,0,0" VerticalAlignment="Top" Width="119" Height="42" Click="Button_Click_1"/>
        <TextBox Name ="MessageTextBox" HorizontalAlignment="Left" Height="58" Margin="34,354,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="583"/>
        <TextBox Name="TextDisplayTextBox" HorizontalAlignment="Left" Height="130" Margin="34,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="640"/>
        <Label Name="WelcomeLabel" Content="welcome" HorizontalAlignment="Left" Margin=" 587,33,0,0" VerticalAlignment="Top" Width="179"/>

    </Grid>
</Window>